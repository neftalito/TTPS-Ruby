<div class="min-h-screen flex items-center justify-center bg-proyecto-bg px-4">

  <div class="w-full max-w-lg bg-proyecto-secondary p-8 rounded-xl shadow-md">

    <h2 class="text-2xl font-bold text-center mb-6 text-proyecto-primary">
      <i class="fa-solid fa-user-gear mr-2"></i>
      Editar mi cuenta
    </h2>

    <!-- Errores -->
    <% if resource.errors.any? %>
      <div class="bg-proyecto-secondary border border-proyecto-accent text-proyecto-accent px-4 py-3 rounded mb-4">
        <ul class="list-disc list-inside">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name,
                 url: registration_path(resource_name),
                 html: { method: :put, class: "space-y-5" }) do |f| %>

      <!-- Email -->
      <div>
        <label class="block font-semibold mb-1 text-proyecto-text">
          <i class="fa-solid fa-envelope mr-1"></i>
          Email
        </label>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "w-full px-3 py-2 border border-proyecto-secondary rounded-lg focus:ring-proyecto-primary focus:border-proyecto-primary text-proyecto-text bg-proyecto-bg" %>
      </div>

      <!-- Confirmable (solo si está activado en Devise) -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-proyecto-accent text-sm mb-2">
          <i class="fa-solid fa-clock"></i>
          Esperando confirmación para: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Nueva password -->
      <div>
        <label class="block font-semibold mb-1 text-proyecto-text">
          <i class="fa-solid fa-lock mr-1"></i>
          Nueva contraseña
          <span class="text-proyecto-text/70 text-sm">(opcional)</span>
        </label>

        <%= f.password_field :password,
                             autocomplete: "new-password",
                             placeholder: "Dejar en blanco si no querés cambiarla",
                             class: "w-full px-3 py-2 border border-proyecto-secondary rounded-lg focus:ring-proyecto-primary focus:border-proyecto-primary text-proyecto-text bg-proyecto-bg" %>

        <% if @minimum_password_length %>
          <p class="text-sm text-proyecto-text/70 mt-1">
            Mínimo <%= @minimum_password_length %> caracteres
          </p>
        <% end %>
      </div>

      <!-- Confirmación -->
      <div>
        <label class="block font-semibold mb-1 text-proyecto-text">
          <i class="fa-solid fa-lock mr-1"></i>
          Confirmar nueva contraseña
        </label>
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "w-full px-3 py-2 border border-proyecto-secondary rounded-lg focus:ring-proyecto-primary focus:border-proyecto-primary text-proyecto-text bg-proyecto-bg" %>
      </div>

      <!-- Contraseña actual -->
      <div>
        <label class="block font-semibold mb-1 text-proyecto-text">
          <i class="fa-solid fa-key mr-1"></i>
          Contraseña actual
          <span class="text-proyecto-text/70 text-sm">(obligatoria para guardar cambios)</span>
        </label>
        <%= f.password_field :current_password,
                             autocomplete: "current-password",
                             class: "w-full px-3 py-2 border border-proyecto-secondary rounded-lg focus:ring-proyecto-primary focus:border-proyecto-primary text-proyecto-text bg-proyecto-bg" %>
      </div>

      <!-- Botones -->
      <div class="flex justify-between items-center mt-6">
        <%= link_to "Cancelar",
                    backstore_root_path,
                    class: "px-4 py-2 rounded-lg bg-proyecto-secondary text-proyecto-primary hover:bg-proyecto-accent hover:text-proyecto-bg" %>

        <%= f.submit "Guardar cambios",
                     class: "px-5 py-2 rounded-lg bg-proyecto-primary hover:bg-proyecto-accent text-proyecto-bg font-semibold" %>
      </div>

    <% end %>

  </div>
</div>