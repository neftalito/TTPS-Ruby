<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4">
  <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-md border border-gray-200 dark:border-gray-700">

    <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 text-center mb-6">
      Iniciar sesión
    </h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-5") do |f| %>

      <div>
        <label class="block mb-1 font-medium text-gray-700 dark:text-gray-300">Email</label>
        <%= f.email_field :email,
                          autofocus: true,
                          class: "w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600
                     bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2
                     focus:ring-proyecto-primary focus:outline-none" %>
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-700 dark:text-gray-300">Contraseña</label>
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600
                     bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2
                     focus:ring-proyecto-primary focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded bg-gray-200 dark:bg-gray-700" %>
          <label class="text-gray-700 dark:text-gray-300">Recordarme</label>
        </div>
      <% end %>

      <%= f.submit "Ingresar",
                   class: "w-full py-2.5 rounded-lg bg-proyecto-primary text-white font-medium
                   hover:bg-proyecto-accent transition focus:ring-2 focus:ring-offset-2
                   focus:ring-proyecto-accent" %>

    <% end %>

    <div class="text-center mt-4">
      <% if devise_mapping.registerable? %>
        <%= link_to "Crear cuenta", new_registration_path(resource_name),
                    class: "text-proyecto-primary dark:text-blue-400 hover:underline" %>
      <% end %>
    </div>

  </div>
</div>
