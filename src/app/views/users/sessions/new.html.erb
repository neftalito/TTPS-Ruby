<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">

  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-md">

    <h2 class="text-2xl font-bold text-center mb-6">
      <i class="fa-solid fa-right-to-bracket mr-2"></i>
      <%= t("devise.sessions.new.sign_in") %>
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <!-- Email -->
      <div class="mb-4">
        <label class="block font-medium mb-1">
          <i class="fa-solid fa-envelope mr-1"></i>
          <%= f.label :email %>
        </label>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label class="block font-medium mb-1">
          <i class="fa-solid fa-lock mr-1"></i>
          <%= f.label :password %>
        </label>
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Remember me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <!-- Submit button -->
      <div class="mt-6">
        <%= f.submit t("devise.sessions.new.sign_in"),
                     class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-semibold flex items-center justify-center gap-2" %>
      </div>

    <% end %>

    <!-- Links -->
    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>
