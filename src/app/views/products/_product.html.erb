<div id="<%= dom_id product %>">
  <div>
    <strong>Name:</strong>
    <%= product.name %>
  </div>

  <div>
    <strong>Description:</strong>
    <%= product.description %>
  </div>

  <div>
    <strong>Price:</strong>
    <%= product.price %>
  </div>

  <div>
    <strong>Stock:</strong>
    <%= product.stock %>
  </div>

  <div>
    <strong>Category:</strong>
    <%= product.category_id %>
  </div>

  <div>
    <strong>Published:</strong>
    <%= product.published %>
  </div>

</div>
