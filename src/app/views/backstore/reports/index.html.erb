<div class="max-w-[95%] mx-auto mb-10" data-controller="report-filters">
  
  <header class="flex flex-col gap-6 xl:flex-row xl:items-end xl:justify-between mb-8">
    <div>
      <p class="text-sm uppercase tracking-widest text-proyecto-text/30">Métricas</p>
      <h1 class="text-3xl font-bold text-proyecto-primary">Reporte de Ventas</h1>
      <p class="text-proyecto-text/60 mt-1">
        <% if @range == 'all' %>
          Mostrando el <span class="font-semibold text-proyecto-accent">historial completo</span>
        <% else %>
          Desde <span class="font-semibold text-proyecto-accent"><%= l(@start_date) %></span> hasta <span class="font-semibold text-proyecto-accent"><%= l(@end_date) %></span>
        <% end %>
      </p>
    </div>

    <div class="flex flex-col items-end gap-3 w-full xl:w-auto">
      
      <div class="inline-flex rounded-md p-1 bg-proyecto-secondary/20 border border-proyecto-text/10 overflow-x-auto max-w-full gap-1">
        

        <% btn_class = "px-4 py-2 text-sm font-medium rounded-md focus:outline-none transition-colors whitespace-nowrap" %>
        

        <% active_class = "bg-proyecto-primary text-proyecto-bg shadow-sm" %>
        

        <% inactive_class = "text-proyecto-primary hover:bg-proyecto-secondary hover:text-proyecto-primary" %>

        <%= link_to "Hoy", backstore_reports_path(start_date: Date.current, end_date: Date.current, range: 'today'), 
            class: "#{btn_class} #{@range == 'today' ? active_class : inactive_class}" %>

        <%= link_to "Esta Semana", backstore_reports_path(start_date: Date.current.beginning_of_week, end_date: Date.current.end_of_week, range: 'week'), 
            class: "#{btn_class} #{@range == 'week' ? active_class : inactive_class}" %>

        <%= link_to "Este Mes", backstore_reports_path(start_date: Date.current.beginning_of_month, end_date: Date.current.end_of_month, range: 'month'), 
            class: "#{btn_class} #{@range == 'month' ? active_class : inactive_class}" %>

        <%= link_to "Este Año", backstore_reports_path(start_date: Date.current.beginning_of_year, end_date: Date.current.end_of_year, range: 'year'), 
            class: "#{btn_class} #{@range == 'year' ? active_class : inactive_class}" %>

        <%= link_to "Histórico", backstore_reports_path(range: 'all'), 
            class: "#{btn_class} #{@range == 'all' ? active_class : inactive_class}" %>

        <button type="button" data-action="report-filters#toggle" 
                class="<%= btn_class %> <%= @range == 'custom' ? active_class : inactive_class %>">
          Personalizado
        </button>
        
      </div>
      <div data-report-filters-target="customRange" class="hidden w-full xl:w-auto bg-proyecto-secondary/20 p-3 rounded-lg border border-proyecto-text/10 animate-fade-in-down shadow-lg">
        <%= form_with url: backstore_reports_path, method: :get, class: "flex flex-col sm:flex-row gap-2 items-center" do |f| %>
          <%= f.hidden_field :range, value: 'custom' %>
          
          <div class="flex items-center gap-2 w-full">
            <%= f.date_field :start_date, value: @start_date || Date.current, class: "w-full rounded-md border-proyecto-text/20 bg-proyecto-bg text-proyecto-primary text-xs py-1.5 focus:border-proyecto-accent focus:ring-proyecto-accent", data: { report_filters_target: "startDate", action: "change->report-filters#updateConstraints" } %>
            <span class="text-proyecto-text/40">-</span>
            <%= f.date_field :end_date, value: @end_date || Date.current, class: "w-full rounded-md border-proyecto-text/20 bg-proyecto-bg text-proyecto-primary text-xs py-1.5 focus:border-proyecto-accent focus:ring-proyecto-accent", data: { report_filters_target: "endDate", action: "change->report-filters#updateConstraints" } %>
          </div>
          
          <%= f.button "Aplicar", class: "w-full sm:w-auto px-3 py-1.5 bg-proyecto-primary text-proyecto-bg text-xs font-bold rounded-md hover:bg-proyecto-accent transition" %>
        <% end %>
      </div>
        <div class="flex gap-2 mt-4 xl:mt-0">
        
          <%= link_to backstore_reports_path(format: :csv, params: request.query_parameters), class: "inline-flex items-center gap-2 px-4 py-2 rounded-md bg-green-600 hover:bg-green-700 text-white font-medium text-sm transition shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            CSV
          <% end %>

          <%= link_to backstore_reports_path(format: :pdf, params: request.query_parameters), target: "_blank", class: "inline-flex items-center gap-2 px-4 py-2 rounded-md bg-red-600 hover:bg-red-700 text-white font-medium text-sm transition shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            PDF
          <% end %>
        </div>




    </div>
  </header>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    
    <div class="bg-proyecto-secondary/10 p-6 rounded-xl border border-proyecto-text/5 relative overflow-hidden group hover:border-proyecto-accent/30 transition-all">
      <div class="absolute right-0 top-0 h-full w-1 bg-proyecto-success"></div>
      <p class="text-xs font-bold text-proyecto-text/60 uppercase tracking-wider">Ingresos Totales</p>
      <p class="text-3xl font-bold text-proyecto-primary mt-2 group-hover:text-proyecto-success transition-colors">
        <%= number_to_currency(@total_revenue, unit: "$", separator: ",", delimiter: ".", format:"%u%n") %>
      </p>
      <p class="text-xs text-proyecto-text/40 mt-2">Facturado en el periodo</p>
    </div>

    <div class="bg-proyecto-secondary/10 p-6 rounded-xl border border-proyecto-text/5 relative overflow-hidden group hover:border-proyecto-accent/30 transition-all">
      <div class="absolute right-0 top-0 h-full w-1 bg-blue-500"></div>
      <p class="text-xs font-bold text-proyecto-text/60 uppercase tracking-wider">Ventas Confirmadas</p>
      <p class="text-3xl font-bold text-proyecto-primary mt-2 group-hover:text-blue-500 transition-colors">
        <%= @total_sales %>
      </p>
      <p class="text-xs text-proyecto-text/40 mt-2">Transacciones exitosas</p>
    </div>

    <div class="bg-proyecto-secondary/10 p-6 rounded-xl border border-proyecto-text/5 relative overflow-hidden group hover:border-proyecto-accent/30 transition-all">
      <div class="absolute right-0 top-0 h-full w-1 bg-purple-500"></div>
      <p class="text-xs font-bold text-proyecto-text/60 uppercase tracking-wider">Precio Promedio</p>
      <p class="text-3xl font-bold text-proyecto-primary mt-2 group-hover:text-purple-500 transition-colors">
        <%= number_to_currency(@average_ticket, unit: "$", separator: ",", delimiter: ".", format:"%u%n") %>
      </p>
      <p class="text-xs text-proyecto-text/40 mt-2">Promedio por venta</p>
    </div>

    <div class="bg-proyecto-secondary/10 p-6 rounded-xl border border-proyecto-text/5 relative overflow-hidden group hover:border-proyecto-accent/30 transition-all">
      <div class="absolute right-0 top-0 h-full w-1 bg-orange-500"></div>
      <p class="text-xs font-bold text-proyecto-text/60 uppercase tracking-wider">Discos Vendidos</p>
      <p class="text-3xl font-bold text-proyecto-primary mt-2 group-hover:text-orange-500 transition-colors">
        <%= @total_items %>
      </p>
      <p class="text-xs text-proyecto-text/40 mt-2">Unidades despachadas</p>
    </div>
  </div>

  <div class="border border-proyecto-text/10 rounded-lg overflow-hidden">
    
    <div class="px-6 py-4 border-b border-proyecto-text/10 bg-proyecto-secondary/20 flex justify-between items-center">
      <h3 class="text-lg font-bold text-proyecto-primary">
        <% if @paginated_ranking.limit_value==1000 %>
          Todos los Productos Vendidos
        <% else %>
          Top <%= @paginated_ranking.limit_value %> Más Vendidos
        <% end %>
        </h3>
      <span class="text-xs font-medium px-2 py-1 rounded bg-proyecto-accent/10 text-proyecto-accent">Ranking por cantidad</span>
    </div>

    <% if @products_for_view.present? %>
      <div class="p-0">
        <%= render "backstore/shared/resource_table", 
            collection: @products_for_view,
            empty_message: "No hay productos para mostrar.",
            columns: [
              { 
                header: "#", 
                header_class: "px-6 py-3 text-left text-xs font-medium text-proyecto-text/60 uppercase tracking-wider w-10",
                value: ->(product) { 
                  # Calculamos el índice real basado en la paginación
                  @paginated_ranking.offset_value + @products_for_view.index(product) + 1 
                } 
              },
              { 
                header: "Producto", 
                value: ->(product) { 
                  # Reconstruimos el HTML de la imagen + nombre (Ojo: esto es un poco más complejo en un lambda)
                  image_html = if product.images.attached?
                                 image_tag(product.images.first.variant(:thumb), class: "h-full w-full object-cover") rescue image_tag(product.images.first, class: "h-full w-full object-cover")
                               else
                                 content_tag(:span, "Sin img", class: "text-[10px] text-proyecto-text/40")
                               end
                  
                  div_img = content_tag(:div, image_html, class: "flex-shrink-0 h-10 w-10 rounded bg-proyecto-secondary/30 overflow-hidden flex items-center justify-center border border-proyecto-text/10")
                  
                  div_text = content_tag(:div, class: "ml-4") do
                    concat content_tag(:div, product.name, class: "text-sm font-medium text-proyecto-primary break-words")
                    concat content_tag(:div, product.author, class: "text-sm text-proyecto-text/60")
                  end

                  content_tag(:div, div_img + div_text, class: "flex items-center")
                } 
              },
              { 
                header: "Categoría", 
                value: ->(product) { 
                  content_tag(:span, product.category&.name || "Sin categoría", class: "px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-proyecto-secondary text-proyecto-primary")
                } 
              },
              { 
                header: "Unidades", 
                header_class: "px-6 py-3 text-right text-xs font-medium text-proyecto-text/60 uppercase tracking-wider",
                cell_class: "px-6 py-4 whitespace-nowrap text-right text-sm font-bold text-proyecto-accent",
                value: ->(product) { product.total_quantity } 
              }
            ]
        %>
      </div>
    <% else %>
      <div class="p-12 text-center">
         </div>
    <% end %>
  </div>
  <%= render "shared/pagination", collection: @paginated_ranking, params: request.query_parameters %>
</div>