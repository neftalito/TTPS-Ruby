<div class="bg-gray-50 min-h-screen py-12">
  <div class="max-w-4xl mx-auto p-12 bg-slate-900 rounded-3xl shadow-2xl border border-slate-700 font-sans text-gray-100">
    <header class="mb-10 border-b border-slate-700 pb-5 text-center">
      <h1 class="text-2xl font-semibold mb-4">Editar producto</h1>
    </header>

    <%= form_with model: @product, url: backstore_product_path(@product), local: true, html: { multipart: true } do |f| %>
      <div class="space-y-12">

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-blue-400 mb-6 border-b border-slate-700 pb-3">Detalles Esenciales del Activo</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= f.label :name, "Título del Álbum", class: "block text-sm font-medium text-blue-400 mb-1" %>
              <%= f.text_field :name, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            <div>
              <%= f.label :author, "Autor / Entidad Principal", class: "block text-sm font-medium text-blue-400 mb-1" %>
              <%= f.text_field :author, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
          <div class="mt-8">
            <%= f.label :description, "Descripción y Metadatos Clave", class: "block text-sm font-medium text-emerald-400 mb-1" %>
            <%= f.text_area :description, rows: 4, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
          </div>
        </div>

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-emerald-400 mb-6 border-b border-slate-700 pb-3">Gestión Financiera e Inventario</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <div>
              <%= f.label :price, "Precio de Venta (AR$)", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <div class="relative mt-1 rounded-lg shadow-sm">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                  <span class="text-emerald-400 sm:text-lg font-bold">$</span> 
                </div>
                <%= f.number_field :price, step: 0.01, class: "block w-full rounded-lg border border-slate-700 pl-8 pr-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
              </div>
            </div>
            
            <div>
              <%= f.label :stock, "Stock Disponible", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.number_field :stock, min: 0, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            
            <div>
              <%= f.label :category_id, "Clasificación (Género)", class: "block text-sm text-slate-300 mb-1" %>
              <%= f.select :category_id, Category.order(:name).pluck(:name, :id), { include_blank: "Seleccionar" }, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
        </div>

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-blue-400 mb-6 border-b border-slate-700 pb-3">Detalles Físicos y Tracking</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <div>
              <%= f.label :product_type, "Formato", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.select :product_type, Product.product_types.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>

            <div>
              <%= f.label :product_state, "Condición", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.select :product_state, Product.product_states.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            
            <div>
              <%= f.label :inventory_entered_at, "Fecha de Ingreso", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.date_field :inventory_entered_at, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
          
          <div class="mt-8">
            <%= f.label :audio_file, "Enlace a Muestra de Audio (URL de alta fidelidad)", class: "block text-sm font-medium text-blue-400 mb-1" %>
            <%= f.text_field :audio_file, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
          </div>
          
        </div>

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-emerald-400 mb-6 border-b border-slate-700 pb-3">Archivos Multimedia de Masterización</h2>
          
          <div>
            <%= f.label :images, "Imágenes de Alta Resolución", class: "block text-sm font-medium text-slate-300 mb-1" %>
            <%= f.file_field :images, multiple: true, accept: "image/*", class: "mt-1 block w-full text-base text-gray-300 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-base file:font-semibold file:bg-emerald-600 file:text-white hover:file:bg-emerald-500 transition duration-200" %>
          </div>

          <% if @product.images.attached? %>
            <div class="mt-8">
              <h3 class="text-xl font-medium text-slate-300 mb-4">Visualización de Activos Actuales:</h3>
              <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                <% @product.images.each do |img| %>
                  <%# CONTENEDOR DE LA IMAGEN CON EL BOTÓN %>
                  <div class="border border-slate-700 rounded-xl overflow-hidden shadow-lg relative group">
                    <%= image_tag url_for(img.variant(resize_to_limit: [300, 300])), class: "object-cover w-full h-28 sm:h-36" %>
                    
                    <%# BOTÓN DE ELIMINAR (SOLO APARECE AL HACER HOVER) %>
                    <div class="absolute top-1 right-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10">
                      <%= link_to delete_image_attachment_backstore_product_path(@product, image_id: img.id),
                          data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar esta imagen permanentemente?" },
                          class: "bg-red-600/90 hover:bg-red-600 text-white p-1.5 rounded-full shadow-md flex items-center justify-center transition backdrop-blur-sm" do %>
                        
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="pt-8 border-t border-slate-700 flex justify-end gap-4">
          <%= link_to "Regresar a Panel", backstore_product_path(@product), class: "px-8 py-3 border border-slate-700 rounded-lg text-gray-300 bg-slate-800 hover:bg-slate-700 transition duration-200 font-medium tracking-wide" %>
          <%= f.submit "Ejecutar Actualización", class: "px-8 py-3 bg-emerald-400 text-slate-950 rounded-lg font-bold hover:bg-emerald-300 transition duration-200 cursor-pointer shadow-lg tracking-wider" %>
        </div>

      </div>
    <% end %>
  </div>
</div>