<div class="bg-gray-50 min-h-screen py-12">
  <div class="max-w-4xl mx-auto p-12 bg-slate-900 rounded-3xl shadow-2xl border border-slate-700 font-sans text-gray-100">
    <header class="mb-10 border-b border-slate-700 pb-5 text-center">
      <h1 class="text-2xl font-semibold mb-4">Editar producto</h1>
    </header>

    <%= form_with model: @product, url: backstore_product_path(@product), local: true, html: { multipart: true, id: "product-form" } do |f| %>
      <div class="space-y-12">

        <%# --- DETALLES ESENCIALES --- %>
        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-blue-400 mb-6 border-b border-slate-700 pb-3">Detalles Esenciales del Activo</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= f.label :name, "Título del Álbum", class: "block text-sm font-medium text-blue-400 mb-1" %>
              <%= f.text_field :name, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            <div>
              <%= f.label :author, "Autor / Entidad Principal", class: "block text-sm font-medium text-blue-400 mb-1" %>
              <%= f.text_field :author, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
          <div class="mt-8">
            <%= f.label :description, "Descripción y Metadatos Clave", class: "block text-sm font-medium text-emerald-400 mb-1" %>
            <%= f.text_area :description, rows: 4, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
          </div>
        </div>

        <%# --- GESTIÓN FINANCIERA --- %>
        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-emerald-400 mb-6 border-b border-slate-700 pb-3">Gestión Financiera e Inventario</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <%= f.label :price, "Precio de Venta (AR$)", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <div class="relative mt-1 rounded-lg shadow-sm">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                  <span class="text-emerald-400 sm:text-lg font-bold">$</span> 
                </div>
                <%= f.number_field :price, step: 0.01, class: "block w-full rounded-lg border border-slate-700 pl-8 pr-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
              </div>
            </div>
            <div>
              <%= f.label :stock, "Stock Disponible", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.number_field :stock, min: 0, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            <div>
              <%= f.label :category_id, "Clasificación (Género)", class: "block text-sm text-slate-300 mb-1" %>
              <%= f.select :category_id, Category.order(:name).pluck(:name, :id), { include_blank: "Seleccionar" }, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
        </div>

        <%# --- DETALLES FÍSICOS Y AUDIO --- %>
        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-blue-400 mb-6 border-b border-slate-700 pb-3">Detalles Físicos y Tracking</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <%= f.label :product_type, "Formato", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.select :product_type, Product.product_types.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            <div>
              <%= f.label :condition, "Condición", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.select :condition, Product.conditions.keys.map { |k| [k.humanize, k] }, {}, id: "product_condition_select", class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            <div>
              <%= f.label :inventory_entered_at, "Fecha de Ingreso", class: "block text-sm font-medium text-slate-300 mb-1" %>
              <%= f.date_field :inventory_entered_at, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>

          <%# --- SECCIÓN DE AUDIO --- %>
          <div id="audio_section_container" class="mt-8 transition-all duration-500 ease-in-out overflow-hidden">
            <%= f.label :audio, "Archivo de Audio (Solo para usados)", class: "block text-sm font-medium text-blue-400 mb-2" %>

            <% if @product.respond_to?(:audio) && @product.audio.attached? %>
              <div class="bg-slate-950 border border-slate-700 rounded-lg p-4 flex flex-col sm:flex-row items-center gap-4 shadow-inner">
                <div class="flex-grow w-full">
                  <p class="text-xs text-emerald-400 font-mono mb-1 uppercase tracking-wider">Audio cargado actualmente:</p>
                  <audio controls class="h-10 w-full rounded-md">
                    <source src="<%= url_for(@product.audio) %>" type="<%= @product.audio.content_type %>">
                    Tu navegador no soporta audio.
                  </audio>
                </div>
                <div class="flex-shrink-0">
                  <%= link_to delete_audio_attachment_backstore_product_path(@product),
                      data: { turbo_method: :delete, turbo_confirm: "¿Eliminar este audio permanentemente?" },
                      class: "flex items-center gap-2 px-4 py-2 bg-red-600/20 hover:bg-red-600 text-red-400 hover:text-white border border-red-600/30 rounded-lg transition-all duration-200 group" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                    <span class="font-medium text-sm">Eliminar Audio</span>
                  <% end %>
                </div>
              </div>
              <input type="hidden" id="has_saved_audio" value="true">
              <p class="text-xs text-slate-400 mt-2 italic">Para cambiar el audio por otro, primero elimine el actual.</p>
            <% else %>
              <div class="relative group">
                <%= f.file_field :audio, accept: "audio/*", class: "block w-full text-sm text-slate-300 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-sm file:font-bold file:bg-blue-600 file:text-white hover:file:bg-blue-500 cursor-pointer border border-slate-700 rounded-xl bg-slate-950 focus:outline-none focus:border-blue-500 transition-all" %>
              </div>
              <p class="text-xs text-gray-500 mt-2">Formatos soportados: MP3, WAV. Máx 10MB.</p>
            <% end %>
          </div>
        </div>

        <%# --- IMÁGENES --- %>
        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-emerald-400 mb-6 border-b border-slate-700 pb-3">Archivos Multimedia</h2>
          <div>
            <%= f.label :images, "Imágenes de Alta Resolución", class: "block text-sm font-medium text-slate-300 mb-1" %>
            <%= f.file_field :images, multiple: true, accept: "image/*", class: "mt-1 block w-full text-base text-gray-300 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-base file:font-semibold file:bg-emerald-600 file:text-white hover:file:bg-emerald-500 transition duration-200" %>
          </div>

          <% if @product.images.attached? %>
            <div class="mt-8">
              <h3 class="text-xl font-medium text-slate-300 mb-4">Visualización de Activos Actuales:</h3>
              <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                <% @product.images.each do |img| %>
                  <div class="border border-slate-700 rounded-xl overflow-hidden shadow-lg relative group">
                    <%= image_tag img, class: "object-cover w-full h-28 sm:h-36" %>
                    <div class="absolute top-1 right-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10">
                      <%= link_to delete_image_attachment_backstore_product_path(@product, image_id: img.id),
                          data: { turbo_method: :delete, turbo_confirm: "¿Borrar imagen permanentemente?" },
                          class: "bg-red-600/90 hover:bg-red-600 text-white p-1.5 rounded-full shadow-md flex items-center justify-center transition backdrop-blur-sm" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="pt-8 border-t border-slate-700 flex justify-end gap-4">
          <%= link_to "Regresar a Panel", backstore_product_path(@product), class: "px-8 py-3 border border-slate-700 rounded-lg text-gray-300 bg-slate-800 hover:bg-slate-700 transition duration-200 font-medium tracking-wide" %>
          <%= f.submit "Ejecutar Actualización", class: "px-8 py-3 bg-emerald-400 text-slate-950 rounded-lg font-bold hover:bg-emerald-300 transition duration-200 cursor-pointer shadow-lg tracking-wider" %>
        </div>

      </div>
    <% end %>
  </div>
</div>

<%# --- SCRIPT DE LÓGICA DE AUDIO CON MODAL CUSTOM --- %>
<script>
  document.addEventListener("turbo:load", function() {
    const conditionSelect = document.getElementById("product_condition_select");
    const audioSection = document.getElementById("audio_section_container");
    const hasSavedAudio = document.getElementById("has_saved_audio");

    // Función para mostrar modal custom
    function showModal({ title, message, confirmText, confirmClass, cancelText, onConfirm }) {
      const modal = document.createElement('div');
      modal.className = 'fixed inset-0 bg-black/70 backdrop-blur-sm flex items-center justify-center z-50';
      modal.innerHTML = `
        <div class="bg-slate-800 border rounded-2xl p-8 max-w-md shadow-xl">
          <h3 class="text-2xl font-bold mb-4">${title}</h3>
          <p class="text-gray-300 mb-6">${message}</p>
          <div class="flex justify-end gap-3">
            <button id="modal-cancel" class="px-6 py-2 bg-slate-700 text-gray-200 rounded-lg hover:bg-slate-600 transition">${cancelText}</button>
            <button id="modal-confirm" class="px-6 py-2 ${confirmClass} text-white rounded-lg font-bold hover:opacity-90 transition">${confirmText}</button>
          </div>
        </div>
      `;
      document.body.appendChild(modal);
      modal.querySelector('#modal-cancel').addEventListener('click', () => modal.remove());
      modal.querySelector('#modal-confirm').addEventListener('click', () => { modal.remove(); onConfirm(); });
      modal.addEventListener('click', (e) => { if (e.target === modal) modal.remove(); });
    }

    function toggleAudioSection() {
      if (conditionSelect.value === "used") {
        audioSection.style.display = "block";
        setTimeout(() => audioSection.style.opacity = "1", 10);
      } else {
        audioSection.style.opacity = "0";
        setTimeout(() => audioSection.style.display = "none", 500);
      }
    }

    if(conditionSelect && audioSection) {
      toggleAudioSection();

      conditionSelect.addEventListener("change", function(e) {
        const newValue = e.target.value;

        if (newValue !== "used" && hasSavedAudio) {
          showModal({
            title: '⚠️ ADVERTENCIA',
            message: 'Este producto tiene un audio asociado.\nSi cambias la condición a "Nuevo", el audio se eliminará permanentemente al guardar.\n\n¿Deseas continuar?',
            confirmText: 'Aceptar',
            confirmClass: 'bg-emerald-500',
            cancelText: 'Cancelar',
            onConfirm: () => toggleAudioSection()
          });

          // Resetear select hasta que confirme
          conditionSelect.value = "used";
          return;
        }

        toggleAudioSection();
      });
    }
  });
</script>
