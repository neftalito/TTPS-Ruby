<div class="bg-gray-50 min-h-screen py-12">
  <div class="max-w-4xl mx-auto p-12 bg-slate-900 rounded-3xl shadow-2xl border border-slate-700 font-sans text-gray-100">
    
    <header class="mb-10 border-b border-slate-700 pb-5 text-center">
      <%# TTULO DINMICO %>
      <h1 class="text-4xl font-extrabold text-emerald-400 tracking-widest uppercase">
        <%= @product.persisted? ? "EDITAR PRODUCTO" : "NUEVO PRODUCTO" %> 
      </h1>
      <p class="text-lg text-slate-400 mt-2 font-light">
        <%= @product.persisted? ? "Realiza las modificaciones necesarias al registro." : "No te olvides de proporcionar la mayor informaci贸n necesaria." %>
      </p>
      
      <%# Mostrar errores de validaci贸n si existen %>
      <% if @product.errors.any? %>
        <div class="mt-4 p-4 rounded-lg bg-red-800/50 border border-red-700 text-red-300 text-left">
          <h4 class="font-bold mb-2">Se encontraron <%= pluralize(@product.errors.count, "error") %>:</h4>
          <ul class="list-disc list-inside text-sm">
            <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </header>

    <%# FORMULARIO: Usa [:backstore, @product] para manejar las rutas correctamente %>
    <%= form_with model: [:backstore, @product], local: true, html: { multipart: true } do |f| %>
      <div class="space-y-12">

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-blue-400 mb-6 border-b border-slate-700 pb-3">Detalles Esenciales del Activo</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= f.label :name, "T铆tulo del lbum", class: "block text-sm font-medium text-blue-400 mb-1" %>
              <%= f.text_field :name, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            <div>
              <%= f.label :author, "Autor / Entidad Principal", class: "block text-sm font-medium text-blue-400 mb-1" %>
              <%= f.text_field :author, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
          <div class="mt-8">
            <%= f.label :description, "Descripci贸n y Metadatos Clave", class: "block text-sm font-medium text-emerald-400 mb-1" %>
            <%= f.text_area :description, rows: 4, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
          </div>
        </div>

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-emerald-400 mb-6 border-b border-slate-700 pb-3">Gesti贸n Financiera e Inventario</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <div>
              <%= f.label :price, "Precio de Venta (AR$)", class: "block text-sm font-medium text-gray-300 mb-1" %>
              <div class="relative mt-1 rounded-lg shadow-sm">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                  <span class="text-emerald-400 sm:text-lg font-bold">$</span>
                </div>
                <%= f.number_field :price, step: 0.01, class: "block w-full rounded-lg border border-slate-700 pl-8 pr-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
              </div>
            </div>
            
            <div>
              <%= f.label :stock, "Stock Disponible", class: "block text-sm font-medium text-gray-300 mb-1" %>
              <%= f.number_field :stock, min: 0, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
            
            <div>
              <%= f.label :category_id, "Clasificaci贸n (G茅nero)", class: "block text-sm text-gray-300 mb-1" %>
              <%= f.select :category_id, Category.order(:name).pluck(:name, :id), { include_blank: "Seleccionar" }, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
        </div>

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-blue-400 mb-6 border-b border-slate-700 pb-3">Detalles F铆sicos y Tracking</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <div>
              <%= f.label :product_type, "Formato", class: "block text-sm font-medium text-gray-300 mb-1" %>
              <%= f.select :product_type, Product.product_types.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>

            <div>
              <%= f.label :condition, "Condici贸n del Producto", class: "block text-sm font-medium text-gray-300 mb-1" %>
              <%= f.select :condition, Product.conditions.keys.map { |k| [k.humanize, k] }, {}, 
                  class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200",
                  id: "product_condition" %>
            </div>
            
            <div>
              <%= f.label :inventory_entered_at, "Fecha de Ingreso", class: "block text-sm font-medium text-gray-300 mb-1" %>
              <%= f.date_field :inventory_entered_at, class: "block w-full border border-slate-700 rounded-lg px-4 py-3 bg-slate-950 text-gray-100 placeholder-slate-600 focus:ring-emerald-500 focus:border-emerald-500 transition duration-200" %>
            </div>
          </div>
          
          <%# BLOQUE DE AUDIO: Se inicializa oculto con style="display: none;" para que JS lo muestre solo si es "usado" %>
          <div id="audio_upload_block" class="mt-8" style="display: none;">
            <label for="product_audio" class="block text-sm font-medium text-blue-400 mb-1">Muestra de Audio (Opcional, solo para discos usados)</label>
            <%= f.file_field :audio, accept: "audio/*", 
                class: "mt-1 block w-full text-base text-gray-300 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-base file:font-semibold file:bg-blue-800 file:text-white hover:file:bg-blue-700 transition duration-200" %>
            
            <%# Previsualizaci贸n del audio adjunto (solo en modo edici贸n) %>
            <% if @product.persisted? && @product.audio.attached? %>
              <div class="bg-slate-950 border border-slate-700 rounded-lg p-4 mt-2">
                <p class="text-xs text-emerald-400 font-mono mb-2 uppercase tracking-wider">Audio cargado:</p>
                <audio controls class="w-full mb-2">
                  <source src="<%= url_for(@product.audio) %>" type="<%= @product.audio.content_type %>">
                </audio>
                <%= link_to delete_audio_attachment_backstore_product_path(@product),
                    data: { turbo_method: :delete},
                    class: "inline-flex items-center gap-2 px-3 py-2 bg-red-600/20 hover:bg-red-600 text-red-400 hover:text-white border border-red-600/30 rounded-lg transition-all text-sm" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                  </svg>
                  Eliminar Audio
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="p-8 border border-slate-700 rounded-xl bg-slate-800 shadow-xl">
          <h2 class="text-2xl font-semibold text-emerald-400 mb-6 border-b border-slate-700 pb-3">Archivos Multimedia de Masterizaci贸n</h2>
          
          <div>
            <%= f.label :images, "Im谩genes de Alta Resoluci贸n", class: "block text-sm font-medium text-gray-300 mb-1" %>
            <%= f.file_field :images, multiple: true, accept: "image/*", class: "mt-1 block w-full text-base text-gray-300 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-base file:font-semibold file:bg-emerald-600 file:text-white hover:file:bg-emerald-500 transition duration-200" %>
          </div>

          <%# VISTA PREVIA: Solo se muestra si el producto ya est谩 en la DB %>
          <% if @product.persisted? && @product.images.attached? %>
            <div class="mt-8">
              <h3 class="text-xl font-medium text-gray-300 mb-4">Visualizaci贸n de Activos Actuales:</h3>
              <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                <% @product.images.each do |img| %>
                  <div class="border border-slate-700 rounded-xl overflow-hidden shadow-lg relative group">
                    <%= image_tag url_for(img.variant(resize_to_limit: [300, 300])), class: "object-cover w-full h-28 sm:h-36" %>
                    <div class="absolute top-1 right-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10">
                      <%= link_to delete_image_attachment_backstore_product_path(@product, image_id: img.id),
                          data: { turbo_method: :delete, turbo_confirm: "驴Borrar imagen permanentemente?" },
                          class: "bg-red-600/90 hover:bg-red-600 text-white p-1.5 rounded-full shadow-md flex items-center justify-center transition backdrop-blur-sm" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="pt-8 border-t border-slate-700 flex justify-end gap-4">
          <%# Bot贸n de Regreso %>
          <%= link_to "Regresar a Panel", backstore_products_path, class: "px-8 py-3 border border-slate-700 rounded-lg text-gray-300 bg-slate-800 hover:bg-slate-700 transition duration-200 font-medium tracking-wide" %>
          
          <%# Bot贸n de Submit Din谩mico %>
          <%= f.submit (@product.persisted? ? "Guardar Cambios" : "Crear Producto"), class: "px-8 py-3 bg-emerald-400 text-slate-950 rounded-lg font-bold hover:bg-emerald-300 transition duration-200 cursor-pointer shadow-lg tracking-wider" %>
        </div>

      </div>
    <% end %>
  </div>
</div>

<%# BLOQUE DE JAVASCRIPT: Toggle audio y modales %>
<script>
document.addEventListener('turbo:load', () => {
  // -----------------------
  // Funciones auxiliares para modales
  // -----------------------
  function showModal({ title, message, confirmText, confirmClass, cancelText, onConfirm }) {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/70 backdrop-blur-sm flex items-center justify-center z-50';
    modal.style.animation = 'fadeIn 0.2s ease-out';
    
    modal.innerHTML = `
      <div class="bg-slate-800 border rounded-2xl p-8 max-w-md shadow-xl" style="animation: scaleIn 0.3s ease-out;">
        <h3 class="text-2xl font-bold mb-4">${title}</h3>
        <p class="text-gray-300 mb-6">${message}</p>
        <div class="flex justify-end gap-3">
          <button id="modal-cancel" class="px-6 py-2 bg-slate-700 text-gray-200 rounded-lg hover:bg-slate-600 transition">${cancelText}</button>
          <button id="modal-confirm" class="px-6 py-2 ${confirmClass} text-white rounded-lg font-bold hover:opacity-90 transition">${confirmText}</button>
        </div>
      </div>
    `;
    
    // Animaciones (solo agregar una vez)
    if (!document.getElementById('modal-animations')) {
      const style = document.createElement('style');
      style.id = 'modal-animations';
      style.textContent = `
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        @keyframes scaleIn { from { transform: scale(0.9); opacity: 0; } to { transform: scale(1); opacity: 1; } }
      `;
      document.head.appendChild(style);
    }

    document.body.appendChild(modal);

    modal.querySelector('#modal-cancel').addEventListener('click', () => modal.remove());
    modal.querySelector('#modal-confirm').addEventListener('click', () => {
      modal.remove();
      onConfirm();
    });

    modal.addEventListener('click', (e) => {
      if (e.target === modal) modal.remove();
    });
  }

  // -----------------------
  // Toggle audio block
  // -----------------------
  const conditionSelect = document.getElementById('product_condition');
  const audioBlock = document.getElementById('audio_upload_block');

  if (conditionSelect && audioBlock) {
    function toggleAudioBlock() {
      audioBlock.style.display = conditionSelect.value === 'used' ? 'block' : 'none';
    }

    toggleAudioBlock();

    conditionSelect.addEventListener('change', (e) => {
      const newValue = e.target.value;
      const audioPlayerExists = audioBlock.querySelector('audio') !== null;

      if (newValue === 'new' && audioPlayerExists) {
        showModal({
          title: '锔 ADVERTENCIA',
          message: 'Este producto tiene un audio asociado.\nSi cambias la condici贸n a "Nuevo", el audio se eliminar谩 permanentemente al guardar.\n\n驴Deseas continuar?',
          confirmText: 'Aceptar',
          confirmClass: 'bg-emerald-500',
          cancelText: 'Cancelar',
          onConfirm: () => toggleAudioBlock()
        });

        // Resetear select a 'used' hasta que el usuario confirme
        conditionSelect.value = 'used';
        toggleAudioBlock();
        return;
      }

      toggleAudioBlock();
    });
  }

  // -----------------------
  // Eliminar audio
  // -----------------------
  const deleteAudioLinks = document.querySelectorAll("a[data-turbo-method='delete'][href*='audio']");

  deleteAudioLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const url = link.getAttribute('href');

      showModal({
        title: 'Eliminar audio',
        message: '驴Seguro que deseas eliminar este archivo de audio? Esta acci贸n es permanente.',
        confirmText: 'Eliminar',
        confirmClass: 'bg-red-500',
        cancelText: 'Cancelar',
        onConfirm: () => Turbo.visit(url, { action: 'replace', method: 'delete' })
      });
    });
  });
});
</script>
