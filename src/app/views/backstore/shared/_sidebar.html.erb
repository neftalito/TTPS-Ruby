<nav class="w-64 min-h-screen bg-gray-900 text-gray-100 p-4 space-y-4">

  <h2 class="text-xl font-semibold text-proyecto-primary">Panel Administrativo</h2>

  <!-- Dashboard -->
  <%= link_to backstore_root_path,
              class: "block px-4 py-2 rounded flex items-center gap-3 #{active_link?(backstore_root_path)}" do %>
    <i class="fa-solid fa-gauge"></i>
    <span>Dashboard</span>
  <% end %>

  <!-- Productos -->
  <% if can? :read, Product %>
    <%= link_to backstore_products_path,
                class: "block px-4 py-2 rounded flex items-center gap-3 #{active_link?(backstore_products_path)}" do %>
      <i class="fa-solid fa-compact-disc"></i>
      <span>Productos</span>
    <% end %>
  <% end %>

  <!-- Ventas -->
  <% if can? :read, Sale %>
    <%= link_to backstore_sales_path,
                class: "block px-4 py-2 rounded flex items-center gap-3 #{active_link?(backstore_sales_path)}" do %>
      <i class="fa-solid fa-cart-shopping"></i>
      <span>Ventas</span>
    <% end %>
  <% end %>

  <!-- Usuarios -->
  <% if can? :read, User %>
    <%= link_to backstore_users_path,
                class: "block px-4 py-2 rounded flex items-center gap-3 #{active_link?(backstore_users_path)}" do %>
      <i class="fa-solid fa-users"></i>
      <span>Usuarios</span>
    <% end %>
  <% end %>

  <hr class="border-gray-700 my-4">

</nav>
