<div class="nested-form-wrapper flex items-end gap-4 mb-4 border-b border-proyecto-text/10 pb-4" data-new-record="<%= f.object.new_record? %>">
  
  <div class="flex-1">
    <%= f.label :product_id, "Producto", class: "block text-sm font-medium text-proyecto-text/80 mb-1" %>
    <%= f.collection_select :product_id, 
          Product.available_products, 
          :id, 
          :label_for_select, 
          { prompt: "Selecciona un producto..." }, 
          { class: "block w-full border border-proyecto-text/20 rounded-lg px-4 py-3 bg-proyecto-bg text-proyecto-primary placeholder-proyecto-text/40 focus:border-proyecto-accent focus:ring-proyecto-accent transition duration-200" } 
    %>
  </div>

  <div class="w-32">
    <%= f.label :quantity, "Cantidad", class: "block text-sm font-medium text-proyecto-text/80 mb-1" %>
    <%= f.number_field :quantity, min: 1, class: "block w-full border border-proyecto-text/20 rounded-lg px-4 py-3 bg-proyecto-bg text-proyecto-primary placeholder-proyecto-text/40 focus:border-proyecto-accent focus:ring-proyecto-accent transition duration-200" %>
  </div>

  <div class="mb-1">
    <button type="button" 
            data-action="click->nested-form#remove"
            class="px-4 py-3 border border-proyecto-error/30 bg-proyecto-error/5 text-proyecto-error rounded-lg hover:bg-proyecto-error hover:text-white transition duration-200 font-medium text-sm flex items-center justify-center w-full sm:w-auto">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
      Eliminar
    </button>
  
    <%= f.hidden_field :_destroy %>
  </div>
</div>