<div class="max-w-[95%] mx-auto mb-10">
  
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Venta #<%= @sale.id %></h1>
      <p class="text-gray-500 mt-1">Registrada el <%= l(@sale.created_at, format: :long) %></p>
      
      <div class="mt-2">
        <% if @sale.cancelled_at.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
            ðŸš« Cancelada el <%= l(@sale.cancelled_at, format: :short) %>
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
            âœ… Confirmada
          </span>
        <% end %>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      <%= link_to "Volver al listado", backstore_sales_path, class: "px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium text-sm transition rounded-lg shadow-sm" %>
      
      <% if @sale.cancelled_at.nil? %>
        <%= button_to "Cancelar Venta", 
        cancel_backstore_sale_path(@sale), 
        method: :patch, 
        data: { turbo_confirm: "Â¿EstÃ¡s seguro de cancelar esta venta? Se devolverÃ¡ el stock." }, 
        class: "px-4 py-2 border border-red-500 text-red-600 hover:bg-red-50 rounded-lg font-medium text-sm transition shadow-sm bg-transparent" %>
      <% end %>
      
      <%= link_to "Descargar PDF", backstore_sale_path(@sale, format: :pdf), class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium text-sm transition shadow-lg", target: "_blank" %>
    </div>
  </div>

  <div class="mb-16">
    <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-medium text-gray-900">Items de la Venta</h3>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Unit.</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Cant.</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Subtotal</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sale.sale_items.each do |item| %>
              <tr>
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900 break-words"><%= item.product&.name || "Producto Eliminado" %></div>
                  <div class="text-sm text-gray-500"><%= item.product&.author %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-600">
                  <%= number_to_currency(item.unit_price) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-600">
                  <%= item.quantity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-bold text-gray-900">
                  <%= number_to_currency(item.unit_price * item.quantity) %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50 border-t border-gray-200">
            <tr>
              <td colspan="3" class="px-6 py-4 text-right text-base font-bold text-gray-700">Total</td>
              <td class="px-6 py-4 text-right text-xl font-bold text-gray-900">
                <%= number_to_currency(@sale.total) %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-6">InformaciÃ³n Adicional</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      
      <div class="bg-white shadow-lg rounded-xl border border-gray-200 p-5">
        <h3 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-4 border-b border-gray-200 pb-2">Datos del Comprador</h3>
        <dl class="space-y-4 text-sm">
          <div>
            <dt class="text-gray-500 text-xs">Nombre</dt>
            <dd class="font-medium text-gray-900 mt-1"><%= @sale.buyer_name %></dd>
          </div>
          <div>
            <dt class="text-gray-500 text-xs">DNI</dt>
            <dd class="font-medium text-gray-900 mt-1"><%= @sale.buyer_dni %></dd>
          </div>
          <div>
            <dt class="text-gray-500 text-xs">Email</dt>
            <dd class="font-medium text-gray-900 mt-1 break-all"><%= @sale.buyer_email %></dd>
          </div>
        </dl>
      </div>

      <div class="bg-white shadow-lg rounded-xl border border-gray-200 p-5">
        <h3 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-4 border-b border-gray-200 pb-2">InformaciÃ³n Interna</h3>
        <dl class="space-y-4 text-sm">
          <div>
            <dt class="text-gray-500 text-xs">Vendedor (Empleado)</dt>
            <dd class="font-medium text-gray-900 mt-1 break-all"><%= @sale.user&.email %></dd>
          </div>
          <div>
            <dt class="text-gray-500 text-xs">ID de TransacciÃ³n</dt>
            <dd class="font-mono text-xs text-gray-600 bg-gray-100 p-2 rounded mt-1 border border-gray-200 select-all">
              <%= @sale.id %>
            </dd>
          </div>
        </dl>
    </div>
  </div>
</div>