<div class="max-w-5xl mx-auto mb-10">
  <div class="flex justify-between items-start mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Venta #<%= @sale.id %></h1>
      <p class="text-gray-500 mt-1">Registrada el <%= l(@sale.created_at, format: :long) %></p>
      
      <div class="mt-3">
        <% if @sale.cancelled_at.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
            ðŸš« Cancelada el <%= l(@sale.cancelled_at, format: :short) %>
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            âœ… Confirmada
          </span>
        <% end %>
      </div>
    </div>

    <div class="flex gap-3">
      <%= link_to "Volver al listado", backstore_sales_path, class: "px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium shadow-sm" %>
      
      <% if @sale.cancelled_at.nil? %>
        <%= button_to "Cancelar Venta", cancel_backstore_sale_path(@sale), method: :patch, data: { turbo_confirm: "Â¿EstÃ¡s seguro de cancelar esta venta? Se devolverÃ¡ el stock." }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium shadow-sm focus:outline-none" %>
      <% end %>
      
      <%= link_to "Descargar PDF", backstore_sale_path(@sale, format: :pdf), class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium shadow-sm", target: "_blank" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white shadow rounded-lg overflow-hidden border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-medium text-gray-900">Items de la Venta</h3>
        </div>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Unit.</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Cant.</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Subtotal</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sale.sale_items.each do |item| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= item.product&.name || "Producto Eliminado" %></div>
                  <div class="text-sm text-gray-500"><%= item.product&.author %></div>                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500">
                  <%= number_to_currency(item.unit_price) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500">
                  <%= item.quantity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium text-gray-900">
                  <%= number_to_currency(item.unit_price * item.quantity) %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="3" class="px-6 py-4 text-right text-base font-bold text-gray-900">Total</td>
              <td class="px-6 py-4 text-right text-base font-bold text-indigo-600">
                <%= number_to_currency(@sale.total) %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <div class="space-y-6">
      <div class="bg-white shadow rounded-lg border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4 border-b pb-2">Datos del Comprador</h3>
        <dl class="space-y-3 text-sm">
          <div>
            <dt class="text-gray-500">Nombre</dt>
            <dd class="font-medium text-gray-900"><%= @sale.buyer_name %></dd>
          </div>
          <div>
            <dt class="text-gray-500">DNI</dt>
            <dd class="font-medium text-gray-900"><%= @sale.buyer_dni %></dd>
          </div>
          <div>
            <dt class="text-gray-500">Email</dt>
            <dd class="font-medium text-gray-900"><%= @sale.buyer_email %></dd>
          </div>
        </dl>
      </div>

      <div class="bg-white shadow rounded-lg border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4 border-b pb-2">InformaciÃ³n Interna</h3>
        <dl class="space-y-3 text-sm">
          <div>
            <dt class="text-gray-500">Vendedor (Empleado)</dt>
            <dd class="font-medium text-gray-900"><%= @sale.user&.email %></dd>
          </div>
          <div>
            <dt class="text-gray-500">ID de TransacciÃ³n</dt>
            <dd class="font-mono text-xs text-gray-500 bg-gray-100 p-1 rounded"><%= @sale.id %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>